<Window x:Class="CagriNotificationWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="70" Width="250" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        ShowInTaskbar="False" 
        BorderBrush="Orange" 
        BorderThickness="2"
        Background="Linen"
        Opacity="0.6"
        Topmost="True"
        MouseDoubleClick="Window_MouseDoubleClick"
        MouseMove="Window_MouseMove"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="lblTitle" VerticalAlignment="Center" HorizontalAlignment="Left" Content="Title" FontStyle="Normal" FontWeight="Bold" FontSize="13"></Label>
        <Label x:Name="lblMessage" VerticalAlignment="Top" HorizontalAlignment="Left" Content="Message" FontStyle="Normal" FontWeight="Medium" FontSize="13" Grid.Row="1"></Label>
    </Grid>
</Window>
